# =============================================================================
# IACUC Protocol Generator - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# LLM API Keys (Required)
# -----------------------------------------------------------------------------

# Anthropic API Key for Claude 3.5 Sonnet
# Get yours at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API Key (Optional - for embeddings)
# If not provided, will use alternative embedding methods
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (set to false in production)
DEBUG=true

# API host and port
API_HOST=0.0.0.0
API_PORT=8000

# -----------------------------------------------------------------------------
# Database Settings
# -----------------------------------------------------------------------------

# Database URL (SQLite for development, PostgreSQL for production)
# SQLite example: sqlite:///./data/iacuc.db
# PostgreSQL example: postgresql://user:password@localhost:5432/iacuc
DATABASE_URL=sqlite:///./data/iacuc.db

# -----------------------------------------------------------------------------
# Vector Database Settings
# -----------------------------------------------------------------------------

# ChromaDB persistence directory
CHROMA_PERSIST_DIR=./data/chroma

# Collection name for regulatory documents
CHROMA_COLLECTION_NAME=iacuc_knowledge_base

# -----------------------------------------------------------------------------
# LLM Settings
# -----------------------------------------------------------------------------

# Default model for agents
DEFAULT_MODEL=claude-sonnet-4-20250514

# Temperature for LLM responses (0.0 - 1.0)
# Lower = more deterministic, Higher = more creative
LLM_TEMPERATURE=0.3

# Maximum tokens for LLM responses
LLM_MAX_TOKENS=4096

# -----------------------------------------------------------------------------
# Logging Settings
# -----------------------------------------------------------------------------

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json or console
LOG_FORMAT=console

# -----------------------------------------------------------------------------
# Security Settings (for production)
# -----------------------------------------------------------------------------

# Secret key for session/token signing (generate a random string)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change_this_to_a_random_secret_key

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
